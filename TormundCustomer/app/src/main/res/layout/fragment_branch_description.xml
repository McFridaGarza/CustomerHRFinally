<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/colorPrimario"
    tools:context=".Activities.Dashboard.BranchDescriptionFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgBranchDescrip"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:background="@drawable/sucursalhrazor" />
                <ImageView
                    android:id="@+id/imgBranchDescription"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:background="@drawable/sucursalhrazor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/agendarcita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/rounded_button"
                    android:drawableLeft="@drawable/ic_content_cut"
                    android:drawableTint="#fff"
                    android:paddingLeft="10dp"
                    android:text="AGENDAR CITA"
                    android:textColor="#FFF"

                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="DESCRIPCIÓN"
                    android:textColor="@color/colorFont"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDescriptionBranch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="05dp"
                    android:text=""
                    android:textColor="@color/colorFont" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/lineas_divisoras" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONTACTO"
                    android:textColor="@color/colorFont"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/phone_icon"
                        tools:ignore="OnClick"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_baseline_phone_24px"
                        android:backgroundTint="@color/colorTerciario" />

                    <TextView
                        android:id="@+id/number_to_call"
                        android:onClick="dialNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="05dp"
                        android:layout_marginTop="07dp"
                        android:fontFamily="@font/work_sans_semibold"
                        android:text=""
                        android:textColor="@color/colorTerciario"
                        android:textSize="18dp" />


                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/lineas_divisoras" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HORARIO DE ATENCIÓN"
                    android:textColor="@color/colorFont"
                    android:textStyle="bold" />

                <!--LUNES-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mHoraries"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:text="Lunes:"
                        android:textColor="@color/colorFont"
                        android:textSize="15dp"
                         />




                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/lineas_divisoras" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:paddingEnd="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="DIRECCION:"
                    android:textColor="@color/colorFont"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="05dp"
                    android:text=" Río Colorado 240, Del Valle, 66220 San Pedro Garza García, N.L."
                    android:textColor="@color/colorFont" />

                <Button
                    android:id="@+id/ButtonViewBranchMaps"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:background="@drawable/rounded_button"
                    android:text="VER MAPA"
                    android:layout_marginBottom="15dp"
                    android:textColor="#FFF"


                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>